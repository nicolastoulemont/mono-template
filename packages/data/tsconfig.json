{
    "compilerOptions": {
      /* Basic Options */
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "composite": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "outDir": "dist",
      "rootDir": "src",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop":true,
      "jsx": "react",
      "baseUrl": "."
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules","dist"]
  }