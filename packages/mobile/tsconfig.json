
{
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",                       
    "module": "commonjs",                     
    "lib": ["es2017"],                        
    "allowJs": true,                          
    "jsx": "react-native",                    
    "noEmit": true,                           
    "isolatedModules": true,                  
    "resolveJsonModule": true,
    "strict": false,                           
    "moduleResolution": "node",                  
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,                  
    "skipLibCheck": false                      
  },
  "exclude": [
    "node_modules", "babel.config.js", "metro.config.js", "jest.config.js"
  ]
}
